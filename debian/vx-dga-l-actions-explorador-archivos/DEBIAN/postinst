#!/bin/bash
# postinst script for vx-dga-l-actions-explorador-archivos
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

function generar-iconos {
	until [ -z "$1" ] ; do
		COMANDO="xdg-icon-resource install --novendor --mode system --theme hicolor"
		RUTABASE="/usr/share/vitalinux/iconos"
		NOMBRE="$1"
		if test -d /usr/share/vitalinux/iconos ; then
			cd /usr/share/vitalinux/iconos
			if test -f /usr/share/vitalinux/iconos/${NOMBRE}.png ; then

				for TAMANO in 16 32 64 128 256 512 ; do
					convert ${NOMBRE}.png -resize ${TAMANO}x ${NOMBRE}-${TAMANO}x.png
				done

				for IMAGEN in $(ls ${NOMBRE}*.png | awk -F".png" '{ print $1 }') ; do
					TAMANO=$(echo $IMAGEN | awk -F"-" '{ print $NF }' | grep [1-9][1-9][x] | cut -d"x" -f1)
					if test "$TAMANO" != "" ; then
						if $COMANDO --size $TAMANO $RUTABASE/$IMAGEN.png $IMAGEN ; then
							echo "--> Se ha registrado en el sistema el Icono: $IMAGEN"
						fi
					fi
				done
			else
				echo "Problema ... no se ha encontrado el icono /usr/share/vitalinux/iconos/$NOMBRE.png"
			fi
		fi
		shift
	done
}


case "$1" in
    configure)
	 if [ -n "$2" ]; then
  		## Si viene de un upgrade, queremos borrar el fichero de polkit
  		if [ -f /etc/polkit-1/localauthority/50-local.d/montajes.pkla ] ; then
  			rm -f /etc/polkit-1/localauthority/50-local.d/montajes.pkla
  		fi
	fi
	generar-iconos "videos" "reproducir-video" "mandar-por-email"

	if update-icon-caches /usr/share/vitalinux/iconos ; then
		echo "--> Se han actualizado los iconos de Vitalinux ..."
	fi

	chmod +x /usr/bin/vx-*
	
	if ! test -d /usr/local/share/file-manager/actions
	then
		mkdir -p /usr/local/share/file-manager/actions
	fi
	cp /usr/share/vitalinux/actions/* /usr/local/share/file-manager/actions

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_icons
if which update-icon-caches >/dev/null 2>&1 ; then
	update-icon-caches /usr/share/icons/vitalinux
fi
# End automatically added section


exit 0
