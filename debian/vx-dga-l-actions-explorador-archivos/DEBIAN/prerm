#!/bin/bash
# prerm script for vx-dga-l-actions-explorador-archivos
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

function eliminar-iconos {
	until [ -z "$1" ] ; do
		COMANDO="xdg-icon-resource uninstall --mode system --theme hicolor"
		RUTABASE="/usr/share/vitalinux/iconos"
		NOMBRE="$1"
		if test -d /usr/share/vitalinux/iconos ; then
			cd /usr/share/vitalinux/iconos
			if test -f /usr/share/vitalinux/iconos/${NOMBRE}.png ; then

				for TAMANO in 16 32 64 128 256 512 ; do
					convert ${NOMBRE}.png -resize ${TAMANO}x ${NOMBRE}-${TAMANO}x.png
				done

				for IMAGEN in $(ls ${NOMBRE}*.png | awk -F".png" '{ print $1 }') ; do
					TAMANO=$(echo $IMAGEN | awk -F"-" '{ print $NF }' | grep [1-9][1-9][x] | cut -d"x" -f1)
					if test "$TAMANO" != "" ; then
						if $COMANDO --size $TAMANO $RUTABASE/$IMAGEN.png $IMAGEN ; then
							echo "--> Se ha eliminado del sistema el Icono: $IMAGEN"
						fi
					fi
				done
			else
				echo "Problema ... no se ha encontrado el icono /usr/share/vitalinux/iconos/$NOMBRE.png"
			fi
		fi
		shift
	done
}

case "$1" in
	remove|deconfigure)
	eliminar-iconos "videos" "reproducir-video"
	if test -d /usr/local/share/file-manager/actions -a -d /usr/share/vitalinux/actions ; then
		for SCRIPT in $(ls /usr/share/vitalinux/actions) ; do
			if test -f /usr/local/share/file-manager/actions/$SCRIPT ; then
				rm -f /usr/local/share/file-manager/actions/$SCRIPT
			fi
		done
	fi

	;;
	upgrade)
	;;

	failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
